pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        always {
            echo 'This will always run after the pipeline completes'
        }
        success {
            echo 'This runs only if the pipeline succeeds'
        }
        failure {
            echo 'This runs only if the pipeline fails'
        }
    }
}
